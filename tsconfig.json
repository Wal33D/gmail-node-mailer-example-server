{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "./src",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    }
  },
  "include": ["global.d.ts", "src/**/*.js", "src/**/*.json", "src/**/*.ts", "src/**/*.tsx", "src/server.ts"]
}
