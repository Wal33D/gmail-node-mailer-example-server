{
  "type": "module",
  "name": "gmail-node-mailer-test-server",
  "version": "1.0.0",
  "description": "gmail-node-mailer-test-server",
  "main": "src/server.js",
  "engines": {
    "node": "18.18.2"
  },
  "scripts": {
    "generate-index": "node -e \"const fs=require('fs');const path=require('path');const dir=path.join(process.cwd(),'src/examples');fs.readdir(dir,(err,files)=>{if(err){console.error(err);process.exit(1);}const exports=files.filter(f=>f.endsWith('.ts')&&f!=='index.ts').map(f=>`export * from './${f.replace(/\\.ts$/, '')}';`).join('\\n');fs.writeFileSync(path.join(dir,'index.ts'),exports);})\"",
    "predev": "tsc && yarn generate-index",
    "dev": "nodemon --watch src --ext ts,json --exec \"ts-node --loader ts-node/esm src/server.ts\"",
    "prebuild": "yarn generate-index",
    "build": "tsc",
    "prestart": "yarn generate-index",
    "start": "yarn build && node build/server.js",
    "clean": "rimraf dist/*"
  },
  "author": "Wal33D",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.8",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "gmail-node-mailer": "^1.8.5",
    "nodemon": "^3.1.0",
    "open": "^10.1.0",
    "pdfkit": "^0.15.0",
    "stream-buffers": "^3.0.2"
  },
  "devDependencies": {
    "@tsconfig/node14": "^14.1.2",
    "@types/node": "^20.12.7",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
